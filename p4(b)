#include <stdio.h>
int main() {
    int n, i;
    printf("Enter how many numbers: ");
    scanf("%d", &n);
    int arr[n];
    printf("Enter the numbers:\n");
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    for(i = 0; i < n; i++) {
        if(arr[i] & 1)
            printf("%d is Odd\n", arr[i]);
        else
            printf("%d is Even\n", arr[i]);
    }
    return 0;
}
